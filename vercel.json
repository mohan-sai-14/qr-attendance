{
  "version": 2,
  "buildCommand": "npm install && cd app && npm install && cd client && npm install autoprefixer postcss tailwindcss && cd .. && npm run build",
  "outputDirectory": "app/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 