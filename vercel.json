{
  "version": 2,
  "buildCommand": "cd app/client && npm install && npm run build",
  "outputDirectory": "app/client/dist",
  "rewrites": [
    {
      "source": "/student/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/admin/:path*",
      "destination": "/index.html"
    },
    {
      "source": "/login",
      "destination": "/index.html"
    },
    {
      "source": "/register",
      "destination": "/index.html"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/app/client/dist/index.html"
    }
  ]
} 