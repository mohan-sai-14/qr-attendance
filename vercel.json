{
  "version": 2,
  "buildCommand": "cd app/client && npm install && npm run build && cd ../.. && npm install && npm run build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "app/client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/app/client/dist/assets/$1"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/app/client/dist/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/app/client/dist/favicon.ico"
    },
    {
      "src": "/(.*)\\.(?:js|css|png|jpg|jpeg|svg|gif)$",
      "dest": "/app/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 