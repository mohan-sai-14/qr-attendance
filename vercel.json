{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "buildCommand": "npm install && cd app/client && npm install --include=dev && npm run build",
  "outputDirectory": "app/client/.next",
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.ts" 
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 