{
  "version": 2,
  "buildCommand": "cd app/client && npm install && npm run build",
  "outputDirectory": "app/client/dist",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/app/client/dist/assets/$1"
    },
    {
      "src": "/index\\..+\\.(js|css)",
      "dest": "/app/client/dist/index.js"
    },
    {
      "src": "/(favicon.ico|logo.svg|manifest.json)",
      "dest": "/app/client/dist/$1"
    },
    {
      "src": "/((?!api/).+\\..+)",
      "dest": "/app/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/app/client/dist/index.html"
    }
  ]
} 