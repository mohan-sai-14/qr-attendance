{
  "version": 2,
  "buildCommand": "cd app && npm run build",
  "outputDirectory": "app/dist",
  "builds": [
    {
      "src": "app/client/index.html",
      "use": "@vercel/static"
    },
    {
      "src": "app/server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "app/server/index.ts" },
    { "src": "/(.*)", "dest": "app/client/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 